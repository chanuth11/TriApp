#: import FadeTransition kivy.uix.screenmanager.FadeTransition
WindowManager:
    transition: FadeTransition()
    MainWindow:
    SecondWindow:
    Calculator:
<StrokeButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: [18]
    color: self.back_color
    bold: True

<MainWindow>:
    name: "main"

    FloatLayout:
        Label:
            text:"Tri App"
            font_size:'90sp'

        StrokeButton:
            id: subm
            background_color: 1, .5, .9, 3
            size_hint: 1,.2
            font_size: '40sp'
            text: "Start using App"
            pos_hint: {"x":0, "bottom":1}
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"
    activity: spinner_activity
    sex: spinner_gender
    height_input: height_input
    age_input: age_input
    weight_input: weight_input
    GridLayout:
        row_force_default:True
        row_default_height:60
        rows: 6
        Label:
            text: 'Select Sex'
            font_size:'30sp'
        Spinner:
            id: spinner_gender
            text: "Sex"
            values: ["Male", "Female"]
        Label:
            font_size:'30sp'
            text: "Select Physical Activity"
        Spinner:
            id: spinner_activity
            text: "Physical Activity"
            values: ["No exercise", "1-3 days/week", "3-5 days/week", "6-7 days/week", "7 days/week"]
        Label:
            font_size:'30sp'
            text:"What is your height?(inches)"
        TextInput:
            id: height_input
            multiline: False
        Label:
            font_size:'30sp'
            text: "What is your age?"
        TextInput:
            id: age_input
            multiline: False
        Label:
            font_size:'30sp'
            text: "What is your weight?(lbs)"
        TextInput:
            id: weight_input
            multiline: False
    FloatLayout:
        size_hint_y: .05
        size_hint_x: .25
        StrokeButton:
            pos_hint: {"y": 9, "x":1.6}
            background_color: 1, .5, .9, 3
            size_hint: 0.8,1
            font_size: 30
            text:"Calculate"
            on_press:
                root.input()
        StrokeButton
            id: calender
            background_color: 1, .5, .9, 3
            size_hint: 1,2
            font_size: '40sp'
            text: "Calender"
            pos_hint: {"x":1.5, "bottom":1}
            on_press:
                root.change()
<Calculator>:
    name:"third"
    FloatLayout:
        StrokeButton:
            id: back
            background_color: 1, .5, .9, 3
            size_hint: 1,.2
            font_size: '40sp'
            text: "Go Back"
            pos_hint: {"x":0, "top":1}
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"